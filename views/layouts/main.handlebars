<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Atlas Travel!</title>
    <link rel="stylesheet" href="/css/jass.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Maven+Pro:wght@500;600;700;900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css"
    />
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.27.0/moment.min.js"
    ></script>
  </head>

  <body>
    <div class="flex-column justify-space-around">
      <div class="header-banner"></div>
      <header
        class="display-flex justify-space-between align-center p-2 sticky-top"
        style="background-color:#bce1ff;"
      >

        <h1>
          <span role="img" aria-label="travel">üõ©Ô∏è</span>
          <a
            href="/"
            style="text-decoration:none;color:rgb(5, 52, 114);font-family:'Maven Pro'; font-weight:700;, sans-serif"
          >Atlas Travel!</a>
        </h1>
        <nav>
          <!-- Conditionally render login or logout links -->
          {{#if logged_in}}
            <a
              href="/plan-trips"
              style="text-decoration:none;color:rgb(5, 52, 114); font-family:'Maven Pro'; font-weight:600;, sans-serif"
            >Plan a Trip</a>
            |
            <button
              class="no-button"
              id="logout"
              style="text-decoration:none;color:rgb(5, 52, 114);margin-right:6px; font-family:'Maven Pro'; font-weight:600;, sans-serif"
            >Logout</button>
          {{else}}
            <a
              href="/login"
              style="text-decoration:none;color:rgb(5, 52, 114);margin-right:6px; font-family:'Maven Pro'; font-weight:600;, sans-serif;margin-right:6px;"
            >Login</a>
          {{/if}}
        </nav>
      </header>
      <main
        class="container container-fluid mt-5"
        style="font-family:'Maven Pro'; font-weight:600;"
      >
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>