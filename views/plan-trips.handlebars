{{!-- body for plan trips webpage --}}
<div class="card p-4 bg-light">
  <form class="form new-trip-form">
    <div class="form-group">
      {{!-- user fills in destination --}}
      <label for="destination">Destination:</label>
      <input
        class="form-input"
        type="text"
        id="destination"
        name="destination"
      />
    </div>
    <div class="form-group">
      {{!-- user fills in trip budget --}}
      <label for="trip-budget">Trip Budget ($):</label>
      <input
        class="form-input"
        type="number"
        id="trip-budget"
        name="trip-budget"
      />
    </div>
    <div class="form-group">
      {{!-- user fills in trip start date --}}
      <label for="start-date">Start Date:</label>
      <input
        class="form-input"
        id="start-date"
        name="start-date"
        type="date"
      ></input>
    </div>
    <div class="form-group">
      {{!-- user fills in trip end date --}}
      <label for="end-date">End Date:</label>
      <input class="form-input" id="end-date" name="end-date" type="date"></input>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-dark my-2">Create Trip</button>
    </div>
  </form>
</div>

{{!-- call on needed javascript files --}}
<script src="/js/planTrip.js"></script>